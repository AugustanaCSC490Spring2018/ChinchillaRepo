<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_blocked_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/blockedusersTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textSize="@dimen/title_size"
            android:text="@string/blocked_users_title"/>

        <ListView
            android:id="@+id/blockedList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/blockUserButton"
            android:layout_alignEnd="@id/blockedusersTV"
            android:layout_alignStart="@id/blockedusersTV"
            android:layout_below="@id/blockedusersTV"
            android:layout_marginTop="@dimen/activity_vertical_margin">
        </ListView>

        <Button
            android:id="@+id/blockUserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textAllCaps="false"
            android:text="@string/block_new_user" />
</RelativeLayout>