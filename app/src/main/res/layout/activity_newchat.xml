<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <EditText
        android:id="@+id/usernameToStartChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:hint="Name"/>

    <Button
        android:id="@+id/start_chat_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="@dimen/button_text_size"
        android:text="@string/action_start_chat"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/usernameToStartChat"
        android:layout_alignStart="@+id/usernameToStartChat"
        android:layout_below="@+id/usernameToStartChat"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/prompt_for_usernames"
        android:textSize="@dimen/instructions_size"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />


</RelativeLayout>