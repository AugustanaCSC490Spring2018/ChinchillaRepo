<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".VerifyAccountActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/verify"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="@dimen/instructions_size"
        android:id="@+id/verify_instructions"
        android:lineSpacingExtra="4dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/parentheses_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/parentheses"
        android:layout_below="@id/verify_instructions"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="@dimen/hint_size"
        android:lineSpacingExtra="4dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        >

        <Button
            android:id="@+id/check_verification_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_account_verified"
            android:textSize="@dimen/button_text_size"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/resend_verification_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/check_verification_btn"
            android:text="@string/resend_verification"
            android:textSize="@dimen/button_text_size"
            android:textAllCaps="false"/>

    </LinearLayout>
</RelativeLayout>