<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/settingsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="@dimen/title_size"
        android:text="@string/settings_title"/>

    <Button
        android:id="@+id/accountSettingsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/settingsTV"
        android:textAllCaps="false"
        android:textSize="@dimen/button_text_size"
        android:text="@string/action_account_settings"
        />

    <Button
        android:id="@+id/displaySettingsBtn"
        android:layout_width="wrap_content"
        android:layout_alignStart="@id/accountSettingsBtn"
        android:layout_alignEnd="@id/accountSettingsBtn"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/accountSettingsBtn"
        android:textAllCaps="false"
        android:textSize="@dimen/button_text_size"
        android:text="@string/action_display_settings"
        />

